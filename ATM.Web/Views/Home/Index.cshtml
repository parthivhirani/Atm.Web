@{
    ViewData["Title"] = "Home";
}
<div class="d-flex justify-content-between">
    <h5>Enter your ATM details</h5>
    <a asp-action="Register" asp-controller="User" class="btn btn-outline-primary">New User?</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <h5 class="text-danger">@ViewBag.Error</h5>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">ATM Card No.</label>
                <input name="cardNo" type="number" class="form-control" placeholder="Enter 16 digit ATM card number..." />
            </div>

            <div class="form-group">
                <hr />
                <input type="submit" value="Enter" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="~/images/home-image.png" alt="atm-banner'" />
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
