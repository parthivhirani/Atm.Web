@model ATM.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Open New Account</h1>

<hr />
<h5 class="text-danger">@ViewBag.Error</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name here" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="LastName" class="form-control" placeholder="Enter your last name here" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNo" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="ContactNo" class="form-control" placeholder="Enter your contact no. here" />
                <span asp-validation-for="ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="Email" class="form-control" placeholder="Enter your email id here" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="Password" class="form-control" placeholder="Enter strong password here" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <span class="text-danger">*</span>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Register" class="btn btn-success" /> |
                <a asp-action="Index" asp-controller="Home">Already have an account?</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
